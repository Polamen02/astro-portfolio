---
import MainHead from '../components/MainHead.astro';
---

<html lang="en">
	<head>
		<MainHead title="Trayectoria | Pol Santos" description="Trayectoria bla bla "/>
		<style>
			.heroImg {
				max-height: 24rem;
				object-fit: cover;
				overflow: hidden;
			}

			.heroImg img {
				width: 100%;
			}

			.bio {
				font-size: var(--f-u1);
				line-height: 2;
				margin-top: 4em;
			}

			.wrapper.bio {
				max-width: 50em;
			}
			@media (min-width: 1020px) {
				.sub-title {
					font-size: var(--f-u12);
				}
			}
		</style>
	</head>
	<body>
		<div class="wrapper">
			<h2 class="sub-title">Trayectoria</h2>
			<div class="heroImg">
				<img
					width="1400"
					height="350"
					src="https://luby.com.br/wp-content/uploads/2021/03/componentes-funcionais-em-ReactJs-1-770x400.jpg"
				/>
			</div>
			<div class="bio wrapper">
				
			</div>
		</div>
	</body>
</html>
